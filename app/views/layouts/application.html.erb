<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>TtsTwit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">TTS</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="/">My Feed</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%= tweets_path %>">All Tweets</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%= all_users_path %>">All Users</a>
      </li>
      <% if user_signed_in? %>
      <li class="nav-item">
        <%# <a class="nav-link" >My Tweets</a> %>
      </li>
      <li class="nav-item">
      <% if current_user.avatar.url %>
        <%= image_tag current_user.avatar.url%>
      <% end %>
        <%= link_to "Update Account", edit_user_registration_path(), class: "btn btn-success" %>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Sign In", new_user_session_path(), class: "btn btn-success" %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
    <%= yield %>
  </body>
</html>
